package Jorge.Controles {	import flash.display.MovieClip;	import flash.events.MouseEvent;			import gs.TweenLite;	import gs.easing.*;		public class BotonSimple extends MovieClip{		private var _activo:Boolean = true;		public function BotonSimple() {			stop();			onDibuja();		}				public function onDibuja():void{			onListeners();		}				public function onListeners():void{			this.buttonMode = true;			this.useHandCursor = true;			this.mouseChildren = false;			this.addEventListener(MouseEvent.MOUSE_OVER, _over);			this.addEventListener(MouseEvent.MOUSE_OUT, _out);		}				private function _over(evento:MouseEvent):void{			if(_activo){				gotoAndStop(2);				//TweenLite.to(this, 0.15, {scaleX:1.05, scaleY:1.05, alpha:0.8, ease:Expo.easeOut});			}		}				private function _out(evento:MouseEvent):void{			if(_activo){				gotoAndStop(1);				//TweenLite.to(this, 0.1, {scaleX:1, scaleY:1, alpha:1, ease:Expo.easeOut});			}		}				public function set activo(valor:Boolean):void{			_activo = valor;			if(!valor){				this.gotoAndStop(3);			}		}				public function get activo():Boolean{			return _activo;		}	}	}